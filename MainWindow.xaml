<Window x:Class="wild_animals.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wild_animals"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Button Content="←" Click="leftArrow_Click" FontSize="20" Width="32" Height="32"/>
        <StackPanel>
            <Image Source="Pictures\elephant.jpg" Name="imageElement" Width="650" Margin="10"/>
            <TextBlock Text="Слоно́вые, или слоны́, — семейство класса млекопитающих из отряда хоботных. В настоящее время к этому семейству относятся 3 ныне живущих вида. Африканские саванные слоны — наиболее крупные наземные млекопитающие." Name="imageDesc" FontSize="18" TextWrapping="WrapWithOverflow" TextAlignment="Left" Width="650"/>
        </StackPanel>
        <Button Content="→" Click="rightArrow_Click" FontSize="20"  Width="32" Height="32"/>
    </StackPanel>
    
</Window>
